<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Press Start 2P' rel='stylesheet'>
    <link rel="stylesheet" href="/css/nes-core.min.css">
    
    <style>
        body {
            background: black;
        }
    </style>

    <title>Mausritter</title>
</head>

<body>
    <div class="nes-container is-rounded is-dark">
        <div class="nes-text">
            <h1>What would you like to do?</h1>
            <div style="background-color:#212529; padding: 1rem 0;">
                <label>
                    <input type="radio" class="nes-radio is-dark" name="answer-dark" checked />
                    <span>Yes</span>
                </label>
                <br>
            
                <label>
                    <input type="radio" class="nes-radio is-dark" name="answer-dark" />
                    <span>No</span>
                </label>
                <br>
            </div>
        </div>
        <br>
        <br>
        <table>
            <tr>
                <td><input type="text" id="command" class="nes-input is-dark" autofocus></td>
                <td><button type="button" class="nes-btn is-primary" onclick="go()">Go</button></td>
            </tr>
        </table>
        
    </div>

    <script>
        // empty the text box
        let commandBar = document.querySelectorAll('#command')[0]
        commandBar.value = ''
        
        function go() {
            let command = document.querySelectorAll('#command')[0].value
            let words = command.split(' ')
            let path = words.join('/')
                       
            location.href = `/${path}`
        }

        // Execute a function when the user presses a key on the keyboard
        commandBar.addEventListener("keydown", function(event) {
            // Number 13 is the "Enter" key on the keyboard
            if (event.keyCode === 13) {
                // Cancel the default action, if needed
                event.preventDefault();
                go();
            }
        });

        
    </script>

    

</body>
</html>
